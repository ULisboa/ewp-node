  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.7.14</version>
  </parent>

  <groupId>pt.ulisboa</groupId>
  <artifactId>ewp-node</artifactId>
  <version>0.16.0</version>
